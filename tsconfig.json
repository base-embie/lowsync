{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "outDir": "build",
        "target": "ES6",
        "sourceMap": true,
        "lib": [
            "dom",
            "es6"
        ],
        "baseUrl": ".",
        "paths": {
			"@common/*": [
				"common/*"
			]
        },
        "jsx": "react",
        "experimentalDecorators": true,
        "mapRoot": "build",
        "emitDecoratorMetadata": true,
        "strictFunctionTypes": false // commented out cuz rxjs typings give compile error in virtualtimescheduler.d.ts. until they update their lib, no strictFunctionTypes for us
    },
    "include": [
        "src/**/*",
		"common/**/*"
    ],
    "files": [
        "gulpfile.ts"
    ]
}